<%= form_with(model: event, local: true) do |f| %>
  <%= render "shared/errors", object: event %>

  <%= f.label :title %>
  <%= f.text_field :title, autofocus: true %>

  <%= f.label :description %>
  <%= f.text_area :description, rows: 10 %>

  <%= f.label :date %>
    <%= f.date_field :date %>

  <%= f.submit %>
<% end %>